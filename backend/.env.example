# Server Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://yourdomain.com

# Database
DB_PATH=./data/database.sqlite

# LLM Providers (You only need one - choose the most cost-effective)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Alternative: Use Anthropic (generally cheaper for longer prompts)
ANTHROPIC_API_KEY=your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Alternative: Use Local LLM (FREE - recommended)
LOCAL_API_URL=http://localhost:1234
LOCAL_API_KEY=optional-if-needed
LOCAL_MODEL=local

# Payment Processing (Required for monetization)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Security
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long-for-security
ADMIN_PASSWORD=your-secure-admin-password-min-12-chars
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
FREE_QUERIES_PER_DAY=5
MAX_REQUESTS_PER_HOUR=100

# Cost Monitoring (Set alerts when these limits are reached)
DAILY_COST_LIMIT=50.00
MONTHLY_COST_LIMIT=500.00